@model CategoryCreateViewModel

<h1>Add Category</h1>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CategoryDesc"></label><br />
        <input asp-for="CategoryDesc" class="form-control" />
        <span asp-validation-for="CategoryDesc" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Add Category</button>
    <a class="btn btn-primary" asp-action="AllCategory" asp-controller="Admin">
        Cancel
    </a>
</form>

